@model EduService.Models.Register

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Register Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Register Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Register Detail</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="col-12">

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Course.CourseName)</a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Course.CourseName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Student.Account.FullName)</a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Student.Account.FullName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Student.StudentId)</a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Student.StudentId)
                                    </p>
                                </div>


                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Student.StudentId)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Student.StudentId)
                                    </p>
                                </div>

                            </div>
                            <button class="btn btn-outline-success bigbutton">@Html.ActionLink("Grading Student", "Create", "Students", new { registerId = Model.RegisterId }, new { @class = "ui-btn-right" })</button>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                        <h3 class="text-primary"><i class="fas fa-paint-brush"></i> @Html.DisplayNameFor(model => model.Course.Image)</h3>
                        <img style="width: 126px" src="@Html.DisplayFor(model => model.Course.Image)" />
                        <br>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.PaidTime)
                                <b class="d-block">@Html.DisplayFor(model => model.PaidTime)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Price)
                                <b class="d-block">@Html.DisplayFor(model => model.Price)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.IsExtraLab)
                                <b class="d-block">@Html.DisplayFor(model => model.IsExtraLab)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Status)
                                <b class="d-block">@Html.DisplayFor(model => model.Status)</b>
                            </p>
                        </div>
                        <div class="text-center mt-5 mb-3">
                            <a href="#" class="btn btn-sm btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.RegisterId })</a>
                            <a href="#" class="btn btn-sm btn-warning">@Html.ActionLink("Back to List", "Index")</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
