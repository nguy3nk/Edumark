@model IEnumerable<EduService.Models.Register>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Register Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Account.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExtraLab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.AccountId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExtraLab)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.RegisterId  }) |
            @Html.ActionLink("Details", "Details", new { id = item.RegisterId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RegisterId })
        </td>
    </tr>
}

</table>
