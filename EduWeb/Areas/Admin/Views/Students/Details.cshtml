@model EduService.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Student Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Student Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Student Detail</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="col-12">

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Account.Group.GroupName)</a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Account.Group.GroupName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Account.FullName)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Account.FullName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Account.Username)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Account.Username)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.StudentId)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.StudentId)
                                    </p>
                                </div>


                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Class.ClassName)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Class.ClassName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Account.Email)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Account.Email)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                        <h3 class="text-primary"><i class="fas fa-paint-brush"></i> @Html.DisplayNameFor(model => model.Account.Image)</h3>
                        <img style="width: 126px" src="@Html.DisplayFor(model => model.Account.Image)" />
                        <br>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Account.Birthday)
                                <b class="d-block">@Html.DisplayFor(model => model.Account.Birthday)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Account.Gender)
                                <b class="d-block">@Html.DisplayFor(model => model.Account.Gender)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Account.Phone)
                                <b class="d-block">@Html.DisplayFor(model => model.Account.Phone)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Account.Address)
                                <b class="d-block">@Html.DisplayFor(model => model.Account.Address)</b>
                            </p>
                        </div>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.Account.Status)
                                <b class="d-block">@Html.DisplayFor(model => model.Account.Status)</b>
                            </p>
                        </div>
                        <div class="text-center mt-5 mb-3">
                            <a href="#" class="btn btn-sm btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.AccountId })</a>
                            <a href="#" class="btn btn-sm btn-warning">@Html.ActionLink("Back to List", "Index")</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
