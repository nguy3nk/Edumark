@model EduService.Models.Class

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Exam Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Exam Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Exam Detail</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                        <div class="row">
                            <div class="col-12">

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">
                                                @Html.DisplayNameFor(model => model.Course.CourseName)
                                            </a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Course.CourseName)
                                    </p>
                                </div>

                                <div class="post clearfix">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Lecturer.Account.FullName)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Lecturer.Account.FullName)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.ClassName)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.ClassName)
                                    </p>
                                </div>
                                <div>
                                    <table class="table">
                                        <tr>
                                            <th>
                                                <a href="#">@Html.DisplayNameFor(model => model.Exams.First().ExamId)</a>
                                            </th>
                                            <th>
                                                <a href="#">@Html.DisplayNameFor(model => model.Exams.First().Program.Subject.Name)</a>
                                            </th>
                                            <th>
                                                <a href="#">@Html.DisplayNameFor(model => model.Exams.First().ExamTime)</a>
                                            </th>
                                            <th></th>
                                        </tr>
                                        @foreach (var item in Model.Exams)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ExamId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Program.Subject.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ExamTime)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ExamId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-5 mb-3">
                    <a href="#" class="btn btn-sm btn-primary">@Html.ActionLink("Add Exam", "Create", new { id = Model.ClassId })</a>
                    <a href="#" class="btn btn-sm btn-warning">@Html.ActionLink("Back to List", "Index")</a>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>