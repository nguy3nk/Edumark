
@model EduService.Models.BlogPost

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>BlogPost Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">BlogPost Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">BlogPost Detail</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="col-12">

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">
                                                @Html.DisplayNameFor(model => model.Blog.BlogName)</a>
                                        </span>
                                    </div>
                                    <p>
                                        @Html.DisplayFor(model => model.Blog.BlogName)
                                    </p>
                                </div>

                                <div class="post clearfix">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.PostTitle)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.PostTitle)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Resource)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Resource)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.Author)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.Author)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="user-block">
                                        <span class="username">
                                            <a href="#">@Html.DisplayNameFor(model => model.BlogContent)</a>
                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @Html.DisplayFor(model => model.BlogContent)
                                        <textarea name="content_news" class="form-control" id="content" value="qưeqwe"></textarea>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                        <h3 class="text-primary"><i class="fas fa-paint-brush"></i> @Html.DisplayNameFor(model => model.PostImage)</h3>
                        <img style="width: 126px" src="@Html.DisplayFor(model => model.PostImage)" />
                        <br>
                        <div class="text-muted">
                            <p class="text-sm">
                                @Html.DisplayNameFor(model => model.UploadDate)
                                <b class="d-block">@Html.DisplayFor(model => model.UploadDate)</b>
                            </p>
                        </div>
                        <div class="text-center mt-5 mb-3">
                            <a href="#" class="btn btn-sm btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.PostId })</a>
                            <a href="#" class="btn btn-sm btn-warning">@Html.ActionLink("Back to List", "Index")</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/tinymce")
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {
            $('.upload_file').click(function () {
                var ip = $(this);
                var finder = new CKFinder();

                finder.selectActionFunction = function (url) {
                    ip.val(url);
                    // tìm đến phần tử thẻ img có thuộc tính datafor = Id của input
                    $("img[data-for='" + ip.attr("id") + "']").attr("src", url);
                }
                finder.popup();
            })
        });
    </script>
}